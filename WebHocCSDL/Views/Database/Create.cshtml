@model WebHocCSDL.Models.DatabaseRequest

@{
    ViewData["Title"] = "Nhập yêu cầu thiết kế CSDL";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📌 Nhập Yêu Cầu Thiết Kế CSDL</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="RequestText" class="form-label">Nhập yêu cầu của bạn:</label>
            <textarea asp-for="RequestText" class="form-control" rows="4" placeholder="Ví dụ: Quản lý sinh viên, bán hàng online,..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">🚀 Tạo Thiết Kế</button>
    </form>
</div>
